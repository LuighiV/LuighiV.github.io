  annotation = {Accepted: 2018-10-31T19:35:12Z},
  file = {/home/luighi/Zotero/storage/L3AGA7BG/Vitón Zorrilla_2018_Modelamiento e implementación de un sistema de sensado de PH de bajo consumo de.pdf;/home/luighi/Zotero/storage/6NA4ITNY/14781.html}
}

